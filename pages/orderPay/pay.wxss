/* pages/scan/pay.wxss */

.Cover{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 10;
}
.payHead {
  height: 320rpx;
  background-color: white;
  text-align: center;
  padding-top: 20rpx;
  font-size: 28rpx;
}

.payHead>text {
  margin-top: 40rpx;
  display: block;
}

.payHead text:nth-child(2) {
  font-size: 60rpx;
}

/* 支付 */

.payBtn {
  height: 90rpx;
  width: 690rpx;
  border-radius: 80rpx;
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  color: white;
  line-height: 90rpx;
  text-align: center;
  font-size: 26rpx;
  background: linear-gradient(left, red, blue);
  background: linear-gradient(#f4a34b, #f5c64b);
}
